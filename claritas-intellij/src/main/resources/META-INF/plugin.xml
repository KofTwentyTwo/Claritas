<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>

   <id>com.kof22.claritas</id>
   <name>Claritas</name>
   <description><![CDATA[
        <h2>Claritas</h2>
        <p><b>Precision. Structure. Clarity. Your codeâ€”refined and illuminated.</b></p>
        <p>Claritas is a code-style intelligence plugin for IntelliJ that brings order, structure, and refinement to your codebase. It analyzes source files, configuration patterns, and project structure to enforce clear, consistent, and intentional coding practices across your entire team.</p>
        <p>Designed to illuminate inconsistencies and elevate readability, Claritas transforms your IDE into a precision tool for writing elegant, reliable, and maintainable code.</p>
    ]]></description>

   <vendor email="james@kof22.com" url="https://kof22.com">KofTwentyTwo</vendor>
   <idea-version since-build="241"/>  <!-- adjust as appropriate -->

   <depends>com.intellij.modules.platform</depends>

   <resource-bundle>messages.Claritas</resource-bundle>

   <extensions defaultExtensionNs="com.intellij">
      <postStartupActivity implementation="com.kof22.claritas.intellij.startup.ClaritasActivity"/>
      <applicationConfigurable
              parentId="editor"
              instance="com.kof22.claritas.intellij.settings.ClaritasSettingsConfigurable"
              id="claritas.settings"
              displayName="Claritas"/>
   </extensions>

   <actions>
      <!-- Claritas submenu inside Code menu -->
      <group id="Claritas.CodeMenu" text="Claritas" description="Claritas comment formatting" popup="true">
         <add-to-group group-id="CodeMenu" anchor="last"/>

         <action id="Claritas.FormatCurrentLine"
                 class="com.kof22.claritas.intellij.actions.FormatCurrentLineAction"
                 text="Format Current Line (POC)"
                 description="POC action that replaces the current line with a Claritas-formatted version">
            <keyboard-shortcut keymap="$default" first-keystroke="meta F6"/>
            <keyboard-shortcut keymap="Mac OS X" first-keystroke="meta F6"/>
            <keyboard-shortcut keymap="Mac OS X 10.5+" first-keystroke="meta F6"/>
         </action>
      </group>

      <!-- Also add to editor context menu -->
      <group id="Claritas.EditorPopup" text="Claritas" description="Claritas comment formatting actions" popup="true">
         <add-to-group group-id="EditorPopupMenu" anchor="last"/>
         <reference ref="Claritas.FormatCurrentLine"/>
      </group>
   </actions>
</idea-plugin>
